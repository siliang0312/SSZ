<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura</Format>
          <Include>
            <ModulePath>.*\\src\\.*</ModulePath>
          </Include>
          <Exclude>
            <!-- 🚫 排除测试代码 -->
            <ModulePath>.*\\tests\\.*</ModulePath>
            <!-- 🚫 排除系统和第三方库 -->
            <ModulePath>.*FluentValidation.*</ModulePath>
            <ModulePath>.*Shouldly.*</ModulePath>
            <ModulePath>.*xunit.*</ModulePath>
            <ModulePath>.*Microsoft.*</ModulePath>
            <ModulePath>.*System.*</ModulePath>
            <ModulePath>.*Newtonsoft.*</ModulePath>
          </Exclude>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
